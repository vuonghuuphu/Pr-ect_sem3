@model Project_3.Models.Oder
@using Project_3.Models;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    IEnumerable<Bank> Bank_ = ViewBag.ListBank as IEnumerable<Bank>;
}

<div style="margin-top:8%;text-align:center;margin-bottom:4%">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @using (Html.BeginForm("Create", "Oders", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id_Brand, htmlAttributes: new { @Value = ViewBag.ListBrandid })
        @Html.HiddenFor(model => model.Price, htmlAttributes: new { @Value = ViewBag.ListPrice })
        @Html.HiddenFor(model => model.Id_Product, htmlAttributes: new { @Value = ViewBag.ListProductid })
        @Html.HiddenFor(model => model.Phone_number, htmlAttributes: new { @Value = @ViewBag.Phone })
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="margin-top:2%;text-align:center;font-size:18px">
                <h2>Thanh toán dịch vụ</h2>
                <p style="margin-top:2%;text-align:left;font-size:22px;color:black"><b>Dịch vụ thanh toán : </b>@ViewBag.ListProduct</p>
                <p style="margin-top:1%;text-align:left;font-size:22px;color:black"><b>Nhà mạng : </b>@ViewBag.ListBrand</p>
                <p style="margin-top:1%;text-align:left;font-size:22px;color:black">
                    <b>Số điện thoại :</b> @ViewBag.Phone
                </p>
                <p style="margin-top:1%;text-align:left;font-size:22px;color:black"><b>Ngân hàng thanh toán : </b></p>
                <select class="form-control" id="sel1" name="sellist1" style="width:70%">
                    <option>--- Chọn ngân hàng ---</option>
                    @foreach (var item in Bank_)
                    {
                        <option>@item.Name_bank</option>
                    }
                </select>
                <p style="margin-top:2%;text-align:left;font-size:22px;color:black">
                    <b>Số tài khoản : </b>
                    @Html.EditorFor(model => model.Card_Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Card_Id, "", new { @class = "text-danger" })
                </p>
                <input type="submit" value="Thanh Toán" class="btn btn-default" style="font-weight:bold;text-align:center;font-size:20px;color:white;background-color:green;padding:5px;border:solid 0px black;width:100%;margin-top:2%" />
            </div>
            <div class="col-md-3"></div>

        </div>
    }
</div>