@model Project_3.Models.Oder

@{
    ViewBag.Title = "Oder_account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="page-top-section set-bg" data-setbg="../../Content/Temp/img/page-top-bg/4.jpg">
    <div class="container">
        <h2>Nạp tiền từ ví tài khoản</h2>
        <nav class="site-breadcrumb">
        </nav>
    </div>
</section>
<div style="margin-top:2%;text-align:center;margin-bottom:4%">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @using (Html.BeginForm("Oder_account", "Oders", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id_Brand, htmlAttributes: new { @Value = ViewBag.ListBrandid })
        @Html.HiddenFor(model => model.Price, htmlAttributes: new { @Value = ViewBag.ListPrice })
        @Html.HiddenFor(model => model.Id_Product, htmlAttributes: new { @Value = ViewBag.ListProductid })
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6" style="margin-top:2%;text-align:center;font-size:18px">
                <h2>Thanh toán dịch vụ</h2>
                <p style="margin-top:2%;text-align:left;font-size:22px;color:black"><b>Dịch vụ thanh toán : </b>@ViewBag.ListProduct</p>
                <p style="margin-top:1%;text-align:left;font-size:22px;color:black"><b>Nhà mạng : </b>@ViewBag.ListBrand</p>
                <p style="margin-top:1%;text-align:left;font-size:22px;color:black"><b>Giá tiền : </b>@ViewBag.ListPrice</p>
                <p style="margin-top:1%;text-align:left;font-size:22px;color:black"><b>Số dư trong ví : </b>@ViewBag.Money vnđ</p>
                <p style="margin-top:2%;text-align:left;font-size:22px;color:black">
                    <b>Số điện thoại : </b>
                    @Html.EditorFor(model => model.Phone_number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone_number, "", new { @class = "text-danger" })
                </p>
                <input type="submit" value="Thanh Toán" class="btn btn-default" style="font-weight:bold;text-align:center;font-size:20px;color:white;background-color:green;padding:5px;border:solid 0px black;width:100%;margin-top:2%" />
            </div>
            <div class="col-md-3"></div>

        </div>
    }
</div>

