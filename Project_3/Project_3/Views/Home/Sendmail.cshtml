@model Project_3.Models.Email

@{
    ViewBag.Title = "Sendmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-top-section set-bg" data-setbg="../../Content/Temp/img/page-top-bg/4.jpg">
    <div class="container">
        <h2>Xác thực</h2>
        <nav class="site-breadcrumb">
        </nav>
    </div>
</section>   
<div style="margin-top:1%;text-align:center;margin-bottom:10%">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idb)
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="margin-top:2%;text-align:center;font-size:18px">
        <h2>Xác thực số điện thoại</h2>
        @using (Html.BeginForm("Sendmail", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => model.idb)
            @Html.HiddenFor(model => model.idp)
            <form>
                <p style="margin-top:1%;text-align:left;font-size:22px;color:black">
                    <b>Số điện thoại : </b>
                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                </p>

                <p style="margin-top:1%;text-align:left;font-size:22px;color:black">
                    <b>Email : </b>
                    @Html.EditorFor(model => model.to, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.to, "", new { @class = "text-danger" })
                </p>
                <p style="text-align:left;font-size:16px;color:black">(*)Mã xác thực sẽ được gửi về email của bạn</p>
                <input type="submit" value="Xác thực" class="btn btn-default" style="font-weight:bold;text-align:center;font-size:20px;color:white;background-color:green;padding:5px;border:solid 0px black;width:100%" />
            </form>
        }
    </div>
    <div class="col-md-3"></div>

</div>



</div>
