@model Project_3.Models.feedback
@{
    ViewBag.Title = "Contact";
}
<section class="page-top-section set-bg" data-setbg="../../Content/Temp/img/page-top-bg/4.jpg">
    <div class="container">
        <h2>Chăm sóc khách hàng</h2>
        <nav class="site-breadcrumb">
            <a class="sb-item" href="@Url.Action("Index", "Home")">Trang chủ</a>
            <span class="sb-item active">Chăm sóc khách hàng</span>
        </nav>
    </div>
</section>
<!-- Page top Section end -->
<!-- Contact Section end -->
@ViewBag.capt11
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="contact-text">
                    <h2>Phản hồi dịch vụ</h2>
                    <p>Hãy nhập ý kiến phản hồi của bạn về dịch vụ chúng tôi cung cấp vào biểu mẫu bên cạnh để cho </p>
                    <ul>
                        <li><i class="flaticon-032-placeholder"></i>Số 8 Tôn Thất Thuyết, Mỹ Đình, Cầu Giấy, Hà Nội</li>
                        <li><i class="flaticon-029-telephone-1"></i>+84 332 65767 42</li>
                        <li><i class="flaticon-025-arroba"></i>hello@youremail.com</li>
                        <li><i class="flaticon-038-wall-clock"></i>Mọi ngày trong tuần: 06:00 -22:00</li>
                    </ul>

                </div>
            </div>
            <div class="col-lg-8">
                <div class="contact-form">
                    <div class="row">
                        @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { placeholder = "Nhập tên " } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { placeholder = "Nhập E-mail " } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.subject, new { htmlAttributes = new { placeholder = "Nhập tiêu đề " } })
                                @Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger" })
                                @Html.TextAreaFor(model => model.content, new { htmlAttributes = new { placeholder = "Nhập nội dung " } })
                                @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                                <button type="submit" class="site-btn">Gửi phản hồi</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.0969666091746!2d105.78049781493267!3d21.02880578599831!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab4cd0c66f05%3A0xea31563511af2e54!2zOCBUw7RuIFRo4bqldCBUaHV54bq_dCwgTeG7uSDEkMOsbmgsIEPhuqd1IEdp4bqleSwgSMOgIE7hu5lp!5e0!3m2!1sen!2s!4v1645434284125!5m2!1sen!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</section>
