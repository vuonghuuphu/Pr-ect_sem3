@model Project_3.Models.account_balance
@using Project_3.Models;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    IEnumerable<Bank> Bank_ = ViewBag.ListBank as IEnumerable<Bank>;
}
<section class="page-top-section set-bg" data-setbg="../../Content/Temp/img/page-top-bg/4.jpg">
    <div class="container">
        <h2>Nạp tiền vào ví</h2>
    </div>
</section>
    <div style="margin-top:2%;text-align:center;margin-bottom:4%">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @using (Html.BeginForm("Create", "account_balance", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id_uer, htmlAttributes: new { @Value = ViewBag.id })
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6" style="margin-top:2%;text-align:center;font-size:18px">
                   
                    <p style="margin-top:2%;text-align:left;font-size:22px;color:black; width:70%">
                        <b>Số tiền : </b>
                        @Html.EditorFor(model => model.Money, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Money, "", new { @class = "text-danger" })
                    </p>
                    <input type="submit" value="Thanh Toán" class="btn btn-default" style="font-weight:bold;text-align:center;font-size:20px;color:white;background-color:green;padding:5px;border:solid 0px black;width:100%;margin-top:2%" />
                </div>
                <div class="col-md-3"></div>

            </div>
        }
    </div>
